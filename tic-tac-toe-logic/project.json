{
  "name": "tic-tac-toe-logic",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tic-tac-toe-logic/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tic-tac-toe-logic",
        "main": "tic-tac-toe-logic/src/index.ts",
        "tsConfig": "tic-tac-toe-logic/tsconfig.lib.json",
        "assets": ["tic-tac-toe-logic/*.md"],
        "generatePackageJson": true,
        "format": ["cjs"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "tic-tac-toe-logic/**/*.ts",
          "tic-tac-toe-logic/package.json"
        ]
      }
    }
  },
  "tags": []
}
